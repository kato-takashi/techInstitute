<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <color android:color="#ff5555ff" />
        <solid android:color="#ffffff" />
        <stroke android:color="#01579b" android:width="2dp" /> <corners android:radius="2dp" />
        <padding android:left="10dp"
            android:top="10dp" android:right="10dp" android:bottom="10dp" />
        <size android:height="30dp" android:width="30dp" />

    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <color android:color="#ff9999ff" />
            <solid android:color="#ffffff" />
            <stroke android:color="#03a9f4" android:width="2dp" /> <corners android:radius="2dp" />
            <padding android:left="10dp"
                android:top="10dp" android:right="10dp" android:bottom="10dp" />
            <size android:height="30dp" android:width="30dp" />
        </shape>
    </item>
</selector>